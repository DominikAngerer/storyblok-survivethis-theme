{{blok._editable}}
<main id="main" role="main" class="games uk-margin-large-bottom">
  <article>
    <h1 class="uk-margin-bottom">{{blok.title|default:story.name}}</h1>
    <div class="intro">
      {{blok.intro|markdown}}
    </div>
    <div class="content">
      <ul class="uk-grid">
        {% set random_news_bottom from stories starts_with:'de/games', per_page:99, sort_by:'name:asc' %}
        {% for news in random_news_bottom.data %}
        {% if news.id != story.id %}
        <li class="uk-width-medium-1-3 uk-margin-bottom">
            <a href="/{{ news.full_slug }}">
              <img src="{{ news.content.featured_image | resize:'353x' }}" alt="{{ news.content.featured_alt }}" class="uk-width-1-1">
              <span>{{ news.content.title |Â default: news.name }}</span>
            </a>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </div>
  </article>
</main>