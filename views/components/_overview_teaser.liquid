            <h2 class="overview_teaser__title">{{newest_overall.data[2].content.title | markdown | strip_html | strip_newlines | truncate: 75}}</h2>
          </div>
        </a>
        {% endif %}
        {% if newest_overall.data[3] != blank %}
        <a class="uk-link-reset uk-width-large-1-2" href="/{{newest_overall.data[3].full_slug}}">
          <div class="overview_teaser overview_teaser--small">
