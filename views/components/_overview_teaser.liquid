            <img src="{{newest_overall.data[1].content.featured_image | resize:'265x196'}}" class="uk-width-1-1" alt="{{newest_overall.data[1].content.title | markdown | strip_html | strip_newlines | truncate: 75}}">
            <h2 class="overview_teaser__title">{{newest_overall.data[1].content.title | markdown | strip_html | strip_newlines | truncate: 75}}</h2>
          </div>
        </a>
        {% endif %}
        {% if newest_overall.data[2] != blank %}
