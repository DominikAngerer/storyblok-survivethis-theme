<div class="uk-width-1-1 uk-margin-large-bottom">
  <h1 class="uk-margin-bottom">{{blok.title|default:story.name}}</h1>
  {% set newest_overall from stories starts_with: story.full_slug, per_page: 5, is_startpage:false %}
       
  <div class="uk-grid uk-grid-small">
    
    <a class="uk-link-reset uk-width-small-1-1 uk-width-medium-1-2 uk-width-large-1-2" href="/{{newest_overall.data[0].full_slug}}">
      
      <div class="overview_teaser">
        <img src="{{newest_overall.data[0].content.featured_image | resize:'508x374'}}" class="uk-width-1-1" alt="{{newest_overall.data[0].content.title | markdown | strip_html | strip_newlines | truncate: 125}}">
        <h2 class="overview_teaser__title">{{newest_overall.data[0].content.title | markdown | strip_html | strip_newlines | truncate: 125}}</h2>
      </div>

    </a>

    <a class="uk-link-reset uk-width-small-1-1 uk-width-medium-1-2 uk-hidden-large" href="/{{newest_overall.data[0].full_slug}}">
      
      <div class="overview_teaser">
        <img src="{{newest_overall.data[1].content.featured_image | resize:'508x374'}}" class="uk-width-1-1" alt="{{newest_overall.data[1].content.title | markdown | strip_html | strip_newlines | truncate: 125}}">
        <h2 class="overview_teaser__title">{{newest_overall.data[0].content.title | markdown | strip_html | strip_newlines | truncate: 125}}</h2>
      </div>

    </a>

    <div class="uk-width-large-1-2 uk-hidden-medium uk-hidden-small">
      <div class="uk-grid uk-grid-small">
        {% if newest_overall.data[1] != blank %}
        <a class="uk-link-reset uk-width-large-1-2 uk-margin-small-bottom" href="/{{newest_overall.data[1].full_slug}}">
